<!-- owl.carousel js -->
<script>
    $(document).ready(function(){
        var owl = $('.currency_carousel');
        owl.owlCarousel({
            items:7,
            loop:false,
            rtl: false,
            margin:0,
            autoplay:true,
            autoplayTimeout:1000,
            autoplayHoverPause:true,
            responsive:{
                0:{
                    items:1,
                },
                600:{
                    items:3,
                },
                601:{
                    items:5,
                },
                1200:{
                    items:7
                }
            }
        });
    });

    $(document).ready(function(){
        var owl = $('.top_carousel');
        owl.owlCarousel({
            items:3,
            loop:false,
            rtl: false,
            margin:0,
            autoplay:true,
            autoplayTimeout:1000,
            autoplayHoverPause:true,
            responsive:{
                0:{
                    items:1,
                },
                600:{
                    items:1,
                },
                1000:{
                    items:3
                }
            }
        });
    });

    /* price marquee */
    $('.bitcoin_price').on('click', function(){
        // $('.bitcoin_price').removeClass('current');
        $(this).toggleClass('current');
    });

    /* onscroll add and remove class */
    $(window).scroll(function() {
        var scroll = $(window).scrollTop();

        if (scroll >= 150) {
            $("body").addClass("fixed");
        } else {
            $("body").removeClass("fixed");
        }

        sticky_scollbar = $("#sticky").offset().top;

        if (scroll >= sticky_scollbar){
            $("#sticky").addClass('sticky');
            $(".search_market_sec").addClass('container');


        }else {
            $("#sticky").removeClass('sticky');
            $(".search_market_sec").removeClass('container');
//
        }
    });

    $('.head_withdraw').click(function(){
        $('.dropdown .text').text('INR');

    });

    $('.head_deposit').click(function(){
        $('.dropdown .text').text('INR');

    });
    $('.carousel').carousel({
       interval: 3000
    });

      function p4close() {
       $('.pop4').hide();
    }  

    
</script>

